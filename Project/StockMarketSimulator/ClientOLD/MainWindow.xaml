<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Hello World! From the client." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="368.25"/>
        <Label Content="{Binding HelloTextLocal}" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="418.705" Height="41.364"/>
        <TextBox Text="{Binding HelloTextLocal}" HorizontalAlignment="Left" Height="44.5" Margin="450,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>

        <Label Content="{Binding Port}" HorizontalAlignment="Left" Margin="67,194.136,0,0" VerticalAlignment="Top" Width="418.705" Height="41.364"/>
        <TextBox Text="{Binding Port}" HorizontalAlignment="Left" Height="19" Margin="468,216.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111"/>
    </Grid>
</Window>
